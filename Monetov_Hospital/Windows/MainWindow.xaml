<Window x:Class="Monetov_Hospital.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monetov_Hospital"
        mc:Ignorable="d"
        Title="Больница - главная" Height="550" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
            <!-- Логотип -->
            <Image Source="/img/hospital_logo.png" Width="100" Height="100"/>

            <!-- Заголовок -->
            <TextBlock Text="Добро пожаловать в больницу"
                       FontSize="20" FontWeight="Bold"
                       TextAlignment="Center" Margin="0,10,0,5"/>

            <!-- Описание -->
            <TextBlock Text="Мы предоставляем качественную медицинскую помощь. 
                             Наша больница оснащена современным оборудованием и опытными врачами."
                       TextAlignment="Center" FontSize="14" Width="450" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Кнопки входа и регистрации -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Войти" Width="200" Height="40" Click="OpenLoginWindow"/>
            <Button Content="Регистрация" Width="200" Height="40" Margin="0,10,0,0" Click="OpenRegisterWindow"/>
        </StackPanel>

        <!-- Часы работы -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,361,0,0">
            <TextBlock Text="🕒 Часы работы" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,5"/>
            <TextBlock Text="Понедельник - Пятница: 08:00 - 20:00" FontSize="14" TextAlignment="Center"/>
            <TextBlock Text="Суббота - Воскресенье: 10:00 - 18:00" FontSize="14" TextAlignment="Center"/>
        </StackPanel>

        <!-- Контактная информация -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <TextBlock Text="📍 Адрес: ул. Здоровья, 15, Москва" FontSize="14" TextAlignment="Center"/>
            <TextBlock Text="📞 Телефон: +7 (495) 123-45-67" FontSize="14" TextAlignment="Center"/>
            <TextBlock Text="🌐 Сайт: www.hospital.ru" FontSize="14" TextAlignment="Center"/>
            <TextBlock Text="✉ Email: contact@hospital.ru" FontSize="14" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
