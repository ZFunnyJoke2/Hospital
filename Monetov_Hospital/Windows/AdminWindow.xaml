<Window x:Class="Monetov_Hospital.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monetov_Hospital"
        mc:Ignorable="d"
Title="Администратор" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Панель администратора" FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Регистраторы -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Регистраторы" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <DataGrid x:Name="registrarGrid" AutoGenerateColumns="False" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding user_id}" Width="50"/>
                        <DataGridTextColumn Header="Логин" Binding="{Binding login}" Width="*"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding name}" Width="*"/>
                        <DataGridTextColumn Header="Фамилия" Binding="{Binding surname}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Content="Добавить регистратора" Margin="0,10,0,0" Click="AddRegistrar_Click"/>
            </StackPanel>

            <!-- Врачи -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Врачи" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <DataGrid x:Name="doctorGrid" AutoGenerateColumns="False" Height="400">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding user_id}" Width="50"/>
                        <DataGridTextColumn Header="Логин" Binding="{Binding login}" Width="*"/>
                        <DataGridTextColumn Header="Имя" Binding="{Binding name}" Width="*"/>
                        <DataGridTextColumn Header="Фамилия" Binding="{Binding surname}" Width="*"/>
                        <DataGridTextColumn Header="Специальность" Binding="{Binding post}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Content="Добавить врача" Margin="0,10,0,0" Click="AddDoctor_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
